generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ProductCate {
  id             Int      @id @default(autoincrement())
  proCategory    String
  proName        String
  proPrice       String
  proDescription String
  sameDay        Boolean?
  type           String
  proImage       String
  status         String   @default("pending")
  vendorId       Int
  vendor         Vendor   @relation(fields: [vendorId], references: [id], name: "VendorToProduct")
}

model Vendor {
  id       Int           @id @default(autoincrement())
  name     String
  email    String
  password String
  phone    String
  products ProductCate[] @relation("VendorToProduct")
}

model Admin {
  id       Int    @id @default(autoincrement())
  name     String
  email    String
  password String
  phone    String
}

model Category {
  id    Int    @id @default(autoincrement())
  cat   String
  Image String
}
